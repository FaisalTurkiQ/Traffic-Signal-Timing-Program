<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Intersection Signal Timer</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* ... (keep the existing styles) ... */
    </style>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Intersection Signal Timer</h1>
        <div class="intersection mb-4">
            <div class="road road-vertical"></div>
            <div class="road road-horizontal"></div>
            <% signals.forEach((signal, index) => { %>
                <div id="signal-<%= index + 1 %>" class="signal signal-<%= index + 1 %> inactive">
                    <%= signal.name %>
                </div>
            <% }); %>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title text-center">Current Status</h2>
                        <p class="text-center fs-4">Signal: <strong id="current-signal"></strong></p>
                        <p class="text-center fs-4">State: <strong id="current-state"></strong></p>
                        <p class="text-center fs-4">Time Remaining: <strong id="time-remaining"></strong> seconds</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <% signals.forEach(signal => { %>
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= signal.name %></h5>
                            <p class="card-text">Green: <%= signal.greenDuration %> seconds</p>
                            <p class="card-text">Yellow: <%= signal.yellowDuration %> seconds</p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/signal-timer.js"></script>
</body>
</html>